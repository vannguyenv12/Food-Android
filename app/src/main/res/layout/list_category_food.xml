<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Active.ViewFood">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_view_category_food"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00ACC1"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Item1">
        <FrameLayout
            android:id="@+id/icon_giohang"
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"

            android:layout_marginRight="10dp">
            <com.nex3z.notificationbadge.NotificationBadge
                android:layout_gravity="top|right"
                android:id="@+id/soLuong_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_cart_24"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </FrameLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_search"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:src="@drawable/icon_search_24"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view_category_food"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_view_category_food"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>