<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#1A1A2E">

    <!-- Image of the pizza -->
    <ImageView
        android:id="@+id/pizza_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/pizza_image_desc"
        android:src="@drawable/sample_pizza_image" />

    <!-- Name and type of the pizza -->
    <TextView
        android:id="@+id/pizza_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/pizza_image"
        android:layout_marginStart="16dp"
        android:text="Pizza Calzone"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pizza_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pizza_name"
        android:layout_toEndOf="@id/pizza_image"
        android:layout_marginStart="16dp"
        android:text="European"
        android:textColor="#B0B0B0"
        android:textSize="14sp" />

    <!-- Price of the pizza -->
    <TextView
        android:id="@+id/pizza_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pizza_type"
        android:layout_toEndOf="@id/pizza_image"
        android:layout_marginStart="16dp"
        android:text="$64"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />


    <!-- Decrease quantity button -->
    <Button
        android:id="@+id/decrease_quantity"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/pizza_price"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/pizza_image"
        android:background="@drawable/button_background"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- Quantity Text -->
    <TextView
        android:id="@+id/quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pizza_price"
        android:layout_toEndOf="@id/decrease_quantity"
        android:layout_marginStart="8dp"
        android:text="2"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:gravity="center" />

    <!-- Increase quantity button -->
    <Button
        android:id="@+id/increase_quantity"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/pizza_price"
        android:layout_toEndOf="@id/quantity_text"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_background"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- Remove item button -->
    <ImageButton
        android:id="@+id/remove_item"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/remove_item"
        android:src="@drawable/ic_remove"
        />

</RelativeLayout>
