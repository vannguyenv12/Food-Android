<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Active.ViewFood">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout_trangchu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_trangchu"
                app:title="Trang Chủ"
                app:titleTextColor="@color/white"
                android:background="@drawable/background_gradient_custom"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
                <FrameLayout
                    android:id="@+id/icon_giohang"
                    android:layout_marginTop="10dp"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"

                    android:layout_marginRight="10dp">
                    <com.nex3z.notificationbadge.NotificationBadge
                        android:layout_gravity="top|right"
                        android:id="@+id/soLuong_cart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_cart_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/image_search"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="?attr/actionBarSize"

                        android:src="@android:drawable/ic_menu_search"/>
                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <ViewFlipper
                android:id="@+id/viewflipper_trangchu"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </ViewFlipper>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#E5F9FB">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Sản phẩm mới nhất"
                    android:textColor="#FB8C00"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_view_trangchu"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

        </LinearLayout>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view_trangchu"
            android:layout_gravity="start"
            android:background="#00897B"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_failue"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/icon_failue_24"/>


            <ListView
                android:textAlignment="center"
                android:layout_marginTop="230dp"
                android:id="@+id/listview_trangchu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ListView>
        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>